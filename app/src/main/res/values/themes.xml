<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FinanceTrackerV2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColorDark</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primaryColorDark</item>
        <!-- Customize your theme here. -->
        <item name="android:itemTextAppearance">@style/myCustomMenuTextApearance</item>
    </style>


    <style name="ChatTextView" parent="android:Widget.TextView">

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:fontFamily">@font/roboto</item>

    </style>

    <style name="RegularOutlinedInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <item name="boxStrokeColor">@color/input_layout_outlined_stroke_color_list</item>
        <item name="hintTextColor">@color/secondaryColor</item>
        <item name="boxStrokeErrorColor">@color/error_color</item>
        <item name="android:textColorHint">@color/hintTextColor</item>

    </style>

    <style name="DropDownOutlinedInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

        <item name="boxStrokeColor">@color/input_layout_outlined_stroke_color_list</item>
        <item name="hintTextColor">@color/secondaryColor</item>
        <item name="boxStrokeErrorColor">@color/error_color</item>
        <item name="hintEnabled">false</item>
        <item name="android:textColorHint">@color/hintTextColor</item>
        <item name="boxBackgroundColor">@color/mainBackgroundColor</item>
        <item name="endIconTint">@color/primaryTextColor</item>

    </style>

    <style name="RegularOutlinedInputLayout.EditText" parent="Widget.AppCompat.EditText">

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:textColorHint">@color/hintTextColor</item>
        <item name="android:textCursorDrawable">@drawable/shape_cursor_white</item>

    </style>

    <style name="myCustomMenuTextApearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>
</resources>