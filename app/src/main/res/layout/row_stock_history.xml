<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/mainBackgroundColor"
    android:layout_width="match_parent"
    android:paddingVertical="8dp"
    android:layout_marginVertical="8dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/row_stock_history_txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/roboto"
        android:textColor="@color/textColor"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="12/06/2008" />

    <TextView
        android:id="@+id/row_stock_history_txtType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="12sp"
        android:textColor="@color/textColor"
        android:fontFamily="@font/roboto"
        tools:text="Compra"
        app:layout_constraintEnd_toStartOf="@+id/row_stock_history_txtQuantity"
        app:layout_constraintStart_toEndOf="@+id/row_stock_history_txtDate"
        app:layout_constraintTop_toTopOf="@+id/row_stock_history_txtDate" />

    <TextView
        android:id="@+id/row_stock_history_txtQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:textSize="12sp"
        android:textColor="@color/textColor"
        android:fontFamily="@font/roboto"
        tools:text="12"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/row_stock_history_txtType" />
</androidx.constraintlayout.widget.ConstraintLayout>