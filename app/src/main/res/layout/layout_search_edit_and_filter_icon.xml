<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_round_view_transparent_white">


    <EditText
        android:id="@+id/layout_search_edit_and_filter_icon_editStockName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@null"
        android:hint="@string/procurar_a_o"
        android:inputType="textPersonName"
        android:padding="4dp"
        android:textColorHint="@color/hintTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <!-- TODO: Adicionar mazimo de letras no edit text...-->


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".8" />

    <ImageView
        android:id="@+id/layout_search_edit_and_filter_icon_imageFilter"
        android:layout_width="wrap_content"
        android:padding="4dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/layout_search_edit_and_filter_icon_editStockName"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/iconsColor"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/layout_search_edit_and_filter_icon_editStockName"
        app:srcCompat="@drawable/ic_baseline_signal_cellular_alt_24" />
</androidx.constraintlayout.widget.ConstraintLayout>