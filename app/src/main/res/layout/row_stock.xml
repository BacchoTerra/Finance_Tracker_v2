<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/mainBackgroundColor"
    android:layout_width="match_parent"
    android:layout_marginVertical="4dp"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/row_stock_image_view"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_round_view"
        android:padding="6dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_round_trending_up_24"
        app:tint="@color/chatGreenColor" />

    <TextView
        android:id="@+id/row_stock_txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:fontFamily="@font/roboto"
        android:text="ITUB4"
        android:textColor="@color/textColor"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/row_stock_image_view"
        app:layout_constraintTop_toTopOf="@+id/row_stock_image_view" />

    <TextView
        android:id="@+id/row_stock_txtBroker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="c6 bank"
        android:textColor="@color/textColor"
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="@+id/row_stock_txtName"
        app:layout_constraintTop_toBottomOf="@+id/row_stock_txtName" />

    <TextView
        android:id="@+id/row_stock_txt_totalSpent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/roboto"
        android:text="R$ 1500.00"
        android:textColor="@color/textColor"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/row_stock_txtName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/row_stock_txtQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/shape_round_corners_primary_dark"
        android:fontFamily="@font/roboto"
        android:padding="4dp"
        android:text="2 papÃ©is"
        android:textColor="@color/textColor"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="@+id/row_stock_txt_totalSpent"
        app:layout_constraintTop_toBottomOf="@+id/row_stock_txt_totalSpent" />
</androidx.constraintlayout.widget.ConstraintLayout>